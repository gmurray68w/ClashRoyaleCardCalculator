<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.murraystudios.graham.clashroyalecardcalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CardListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CardDetailActivity"
            android:label="@string/title_card_detail"
            android:parentActivityName=".CardListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.murraystudios.graham.clashroyalecardcalculator.CardListActivity" />
        </activity>
        <activity
            android:name=".SingleCardView"
            android:label="@string/title_activity_single_card_view"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>